{
  "name": "shopping_api",
  "version": "0.1.4",
  "description": "Shopping's APIs",
  "main": "index.js",
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "scripts": {
    "lint": "gts lint",
    "clean": "gts clean",
    "compile": "tsc",
    "fix": "gts fix",
    "start": "node build/src",
    "dev": "export DEBUG=*; yarn run prepare; yarn run start;",
    "dev:win": "yarn run prepare && yarn run start",
    "prepare": "yarn run compile",
    "build": "yarn run clean; yarn run prepare;",
    "pretest": "yarn run compile",
    "posttest": "yarn run lint",
    "env:dev": "rm .env; cp .env.dev .env;",
    "env:prod": "rm .env; cp .env.prod .env;",
    "orm:refresh": "yarn prisma format && yarn prisma generate"
  },
  "_archived_scripts": {
    "clean": "rimraf dist",
    "prebuild": "yarn run clean",
    "build": "tsc",
    "prestart": "yarn run build",
    "start": "yarn run serve",
    "serve": "yarn env:prod; node dist/index.js",
    "start:prod:js": "yarn env:prod; tsc && node ./dist",
    "start:dev:js": "yarn env:dev; tsc && node ./dist",
    "start:dev": "yarn env:dev; ts-node src | pino-pretty",
    "debug": "export DEBUG=* && yarn start:dev",
    "debug:node": "export DEBUG=* && yarn start:dev:js",
    "prod:node": "export DEBUG=* && yarn start:prod:js",
    "prod:log": "yarn run prod:node |& tee -a output.txt",
    "test": "mocha -r ts-node/register 'test/**/*.test.ts'",
    "test-debug": "export DEBUG=* && npm test",
    "db:schema:update": "yarn prisma format; yarn prisma generate",
    "db:init": "yarn prisma migrate dev --name init",
    "db:delete": "rm -rf prisma/migrations; mysql -u root -p -e \"drop database shopping_db\""
  },
  "dependencies": {
    "@prisma/client": "^3.14.0",
    "argon2": "^0.27.0",
    "axios": "^0.27.2",
    "class-validator": "^0.13.1",
    "cls-hooked": "^4.2.2",
    "cors": "^2.8.5",
    "debug": "^4.2.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-pino-logger": "^7.0.0",
    "express-validator": "^6.9.2",
    "express-winston": "^4.1.0",
    "helmet": "^4.4.1",
    "jaeger-client": "^3.19.0",
    "jsonwebtoken": "^8.5.1",
    "opentracing": "^0.14.7",
    "pino": "^7.11.0",
    "rxjs": "^7.5.5",
    "shortid": "^2.2.16",
    "swagger-jsdoc": "^6.2.1",
    "swagger-ui-express": "^4.3.0",
    "uuid": "^8.3.2",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.6.1"
  },
  "devDependencies": {
    "@types/argon2": "^0.15.0",
    "@types/chai": "^4.2.14",
    "@types/cls-hooked": "^4.3.3",
    "@types/cors": "^2.8.7",
    "@types/debug": "^4.1.5",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.11",
    "@types/express-pino-logger": "^4.0.3",
    "@types/helmet": "^4.0.0",
    "@types/jaeger-client": "^3.18.3",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/mocha": "^8.2.0",
    "@types/shortid": "0.0.29",
    "@types/supertest": "^2.0.10",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^8.3.4",
    "@types/validator": "^13.7.2",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "chai": "^4.3.3",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-mocha": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "gts": "^3.1.0",
    "mocha": "^8.3.0",
    "pino-pretty": "^7.0.0",
    "prisma": "^3.14.0",
    "source-map-support": "^0.5.16",
    "supertest": "^6.1.3",
    "ts-node": "^10.7.0",
    "tslint": "^6.0.0",
    "typescript": "^4.5.0"
  },
  "author": "main@magnificsoftware.com",
  "license": "Apache"
}
